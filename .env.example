# Environment Configuration (Merged from PR #21 base with PR #18 extensions)
DEBUG=True
ENVIRONMENT=development

# Security (PR #21 priority)
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (PR #21 base with PR #18 PostgreSQL option)
DATABASE_URL=sqlite:///./smartsell.db
# DATABASE_URL=postgresql+asyncpg://smartsell:password@localhost:5432/smartsell

# Project Settings (from PR #18)
PROJECT_NAME=SmartSell3

# Redis (for caching and rate limiting) - PR #21
REDIS_URL=redis://localhost:6379

# CORS and Security (PR #21 priority)
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Rate Limiting (PR #21)
RATE_LIMIT_PER_MINUTE=100

# File Upload Settings (from PR #18)
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10_485_760

# Scheduler Settings (from PR #18)
SCHEDULER_TIMEZONE=UTC

# Logging (from PR #18)
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services (combined from both PRs)
MOBIZON_API_URL=https://api.mobizon.kz
MOBIZON_API_KEY=your-mobizon-api-key

TIPTOP_API_URL=https://api.tippy.kz
TIPTOP_API_KEY=your-tiptop-api-key
TIPTOP_API_SECRET=your-tiptop-api-secret
TIPTOP_PAY_PUBLIC_KEY=your-tiptop-pay-public-key
TIPTOP_PAY_SECRET_KEY=your-tiptop-pay-secret-key

KASPI_API_URL=https://api.kaspi.kz
KASPI_API_KEY=your-kaspi-api-key
KASPI_MERCHANT_ID=your-kaspi-merchant-id

# Email (SMTP) - from PR #18
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@smartsell.kz

# Celery (from PR #21)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Media / Static (from PR #18)
MEDIA_BASE_URL=http://localhost:6379

# Cloudinary (from PR #18)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
